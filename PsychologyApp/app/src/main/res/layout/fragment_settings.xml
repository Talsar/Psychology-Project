<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.psychology.psychologyapp.Fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewStartTime"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:elevation="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/question"
                    android:id="@+id/headlineStartTime"
                    android:text="@string/timePickerStart"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timePickerStart"
                    android:text="Start Time"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_below="@+id/headlineStartTime"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewEndTime"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:elevation="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@+id/cardViewStartTime">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        style="@style/question"
                        android:id="@+id/headlineEndTime"
                        android:text="@string/timePickerEnd"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timePickerEnd"
                    android:text="End Time"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_below="@+id/headlineEndTime"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewConfirmSettings"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:elevation="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/cardViewEndTime">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Settings"
                    android:id="@+id/confirmSettingsButton"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|top" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</FrameLayout>
