<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.psychology.psychologyapp.AssessmentFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:id="@+id/scrollView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/relativeLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1296E1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textHeadline"
                    android:text="Assessment"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_horizontal" />


                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewQuestion1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:elevation="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@+id/textHeadline">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1296E1"
                            android:id="@+id/headlineQuestionOne"
                            android:text="Question 1"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Are you on campus?"
                            android:padding="6dp"
                            android:layout_below="@+id/headlineQuestionOne"
                            android:id="@+id/textView2"
                            android:gravity="center_horizontal" />

                        <RadioGroup
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:padding="6dp"
                            android:id="@+id/radioGroupQuestionOne"
                            android:layout_below="@+id/textView2"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="Yes"
                                android:id="@+id/yesRadioButtonQuestionOne"
                                android:checked="false" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="6dp"
                                android:text="No"
                                android:id="@+id/NoRadioButtonQuestionOne"
                                android:layout_toEndOf="@+id/yesRadioButtonQuestionOne"
                                android:checked="false" />

                        </RadioGroup>

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:id="@+id/location_spinner"
                            android:spinnerMode="dropdown"
                            android:layout_below="@+id/radioGroupQuestionOne"
                            android:gravity="center_horizontal"
                            android:layout_toEndOf="@+id/headlineQuestionOne" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewQuestion2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:elevation="8dp"
                    android:layout_below="@+id/cardViewQuestion1"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1296E1"
                            android:text="Question 2"
                            android:id="@+id/headlineQuestionTwo" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewQuestion3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:elevation="8dp"
                    android:layout_below="@+id/cardViewQuestion2"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1296E1"
                            android:text="Question 3"
                            android:id="@+id/headlineQuestionThree" />



                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_below="@+id/cardViewQuestion3"
                    android:id="@+id/button"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
